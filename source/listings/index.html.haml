"title": "My listings"

;;;

%section
	.container
		.row
			.col-12
				.d-flex.justify-content-between.align-items-center
					%h5.bold-font.no-margin
						My listings
				.double-margin-top
					%form.table-search.mb-3
						.input-group.simple-prepend
							.input-group-prepend
								.input-group-text
									%span.material-icons
										search
							%input.form-control.form-control-lg{:type=>"text",:placeholder=>"Search"}

					.table-responsive.base-table
						%table.table.table-hover
							%thead
								%tr
									%th{:scope => "col"} 
										Address
									%th.currently-sorted.sortable{:scope => "col"} 
										Deadline
										%i.material-icons.sort
											arrow_downward
									%th{:scope => "col"} 
										Offers
									
									
							%tbody
								-20.times do
									%tr
										%td.text-nowrap.bold-font
											%span.table-actions-container
												%span.action-text-container
													%a{:href=>"/browse/show"}
														%img.mr-3{:src=>"../images/icon-listing.svg"}
														%span
															3049 Wells Fargo Dr, Fort Collins, CO 80521
												%span.action-container
													.btn-group
														%button.btn.btn-secondary.btn-sm{:type => "button"} 
															Details
														%button.btn.btn-secondary.btn-sm.dropdown-toggle.dropdown-toggle-split{ "data-toggle" => "dropdown", :type => "button"}
														.dropdown-menu
															%a.dropdown-item{:href => "#"} 
																Action
															%a.dropdown-item{:href => "#"} 
																Another action
														
											
										%td.text-nowrap
											=lorem.date
										%td.text-nowrap
											4
										