;;;

"title": "listings",
"layout": "public"

;;;


.d-flex
	.listings-container
		.listings-container-inner
			.listings-filters
				.container
					.listing-fonters-inner.d-flex.justify-content-between.align-items-center
						.item
							%form.search-form.listings-search
								%input.form-control{:type=>"search", :placeholder=>"Address or zip", :width=>"900px"}
								%span.search-icon.material-icons
									search
						.dropdown
							%button.btn.btn-secondary.text-left{:type=>"button", "data-toggle" => "dropdown"}
								Price 
								%span.regular-font
									$200K - 500K
								%i.material-icons
									keyboard_arrow_down
							.dropdown-menu.dropdown-menu-right.no-padding{:style=>"width:300px;"}
								.padded
									%p.body-small.bold-font
										Price range
									.d-flex.flex-row.align-items-center
										.item
											%input.form-control{:type=>"text", :value=>"$100,000"}
										.item.mr-2.ml-2
											\-
										.item
											%input.form-control{:type=>"text", :value=>"$500,000"}
									.mt-4.d-flex.justify-content-end
										%button.btn.btn-secondary.btn-sm{:type=>"button"}
											Done
			.listings-list-container
				.container
					.row
						-10.times do
							.col-lg-6.col-md-6.col-12
								=partial"shared/house_thumb"

	.map-container
		.map-inner
			.map.map-component
				%iframe#gmap_canvas.map-component{:frameborder => "0",  :marginheight => "0", :marginwidth => "0", :scrolling => "no", :src => "https://maps.google.com/maps?width=520&height=400&hl=en&q=%20Orlando+()&t=&z=12&ie=UTF8&iwloc=B&output=embed"}
					%script{:src => "https://embedmaps.com/google-maps-authorization/script.js?id=f489520124373aad65625453e8de8dd90f5d4017", :type => "text/javascript"}
					

										